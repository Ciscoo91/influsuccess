    <!--
        Added the entity UserExtra.
    -->
    <changeSet id="20200903124943-1" author="jhipster">
        <createTable tableName="user_extra">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="birthday" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="phone" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_user_extra_user_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="user_extra" columnName="birthday" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20200903124943-1-relations" author="jhipster">

    </changeSet>
